<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsecond"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".UploadCourseOfferActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Course Offer"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        android:fontFamily="monospace"
        android:layout_marginTop="10dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUploadCourse"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="10dp"
        android:text="Upload"
        android:textAllCaps="false"
        android:textSize="20sp"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txtFileLocationCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="File Location"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitCourse"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Submit"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="50dp"
        />


</LinearLayout>